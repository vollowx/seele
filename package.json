{
  "name": "@vollowx/seele",
  "version": "0.10.3",
  "description": "Standard Extensible Elements. A web components library that can be styled and extended freely, pre-providing components in Material Design 3.",
  "author": "vollowx",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./src/all.js",
  "module": "./src/all.js",
  "exports": {
    ".": "./src/all.js",
    "./m3/*": "./src/m3/*.js",
    "./base/*": "./src/base/*.js"
  },
  "files": [
    "src/**/*.js",
    "src/**/*.d.ts",
    "custom-elements.json",
    "LICENSE",
    "README.md"
  ],
  "customElements": "custom-elements.json",
  "keywords": [
    "web-components",
    "material-design",
    "material-3",
    "lit",
    "ui-components"
  ],
  "homepage": "https://seele.v9.nz",
  "repository": {
    "type": "git",
    "url": "https://github.com/vollowx/seele.git"
  },
  "scripts": {
    "dev": "wds",
    "dev:styles": "bun scripts/build-styles.ts --watch",
    "build": "bun run build:styles && bun run build:components",
    "build:styles": "bun scripts/build-styles.ts --minify",
    "build:components": "tsc",
    "cleanup": "bun run cleanup:styles && bun run cleanup:compiled",
    "cleanup:styles": "bun scripts/cleanup.ts styles",
    "cleanup:compiled": "bun scripts/cleanup.ts compiled",
    "prepublishOnly": "bun cleanup && bun run build",
    "format": "prettier . --check",
    "format:fix": "prettier . --check --write",
    "format:sortcss": "bunx postcss \"src/**/*.css\" --replace --no-map",
    "cem": "bunx cem analyze --litelement --globs 'src/m3/*.ts' --exclude 'src/m3/*.css.ts'"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@types/bun": "^1.3.8",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-esbuild": "^1.0.4",
    "chokidar": "^5.0.0",
    "lightningcss": "^1.30.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-sorting": "^9.1.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "lit": "^3.3.2",
    "tslib": "^2.8.1"
  }
}
